@model StudentTutoringApplication.Models.Appointment
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "BookAppointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Book Appointment?</h1>

<h4>Appointment Deatils:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BookAppointment" asp-area="Student" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <p><b>Scheduling for @ViewBag.AvailableDate</b> - @ViewBag.AvailableTime</p>

            <label > <b>TUTOR: @ViewBag.TutorId</b> - @ViewBag.TutorName </label>
            <label > <b>STDUENT: @ViewBag.StudentId</b> - @ViewBag.StudentName </label>

            <input type="hidden" asp-for="TutorId"/>
            <input type="hidden" asp-for="StudentId"/>
            <input type="hidden" asp-for="ScheduleId"/>
            <input type="hidden" asp-for="SubjectId"/>
            <input type="hidden" asp-for="Status"/>
            <input type="hidden" asp-for="Rating"/>

            <div class="form-group">
                <input type="submit" value="Confirm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
