@model StudentTutoringApplication.Models.Tutor
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Your Available Schedule</h1>

<table class="table table-striped">
    <tr>
        <th>First Name</th>
        <td>@Model.FirstName</td>
    </tr>
    <tr>
        <th>Last Name</th>
        <td>@Model.LastName</td>
    </tr>
    <tr>
        <th>Subject</th>
        <td>@Model.Subject</td>
    </tr>
    <tr>
        <th>Available Date</th>
        <td>@Model.AvailableDate.ToString("yyyy-MM-dd")</td>
    </tr>
    <tr>
        <th>Available Time</th>
        <td>@Model.AvailableTime</td>
    </tr>
</table>

<form asp-area="Tutor" >
      

    <button type="submit" class="btn btn-success">
        Add to Database
    </button>
</form> 

<a asp-area="Tutor"
   asp-controller="Home"
   asp-action="Index"
   class="btn btn-secondary">
    Back &amp; Edit
</a>

