@model StudentTutoringApplication.Models.Tutor
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tutor Availability</h2>

<form asp-area="Tutor"
      asp-controller="Home"
      asp-action="SubmitAvailability"
      method="post">
    @Html.AntiForgeryToken()

    <!-- ✅ 整体错误区域（比如日期超 6 个月） -->
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <table class="table">
        <tr>
            <th>First Name</th>
            <td>
                <input asp-for="FirstName" class="form-control" />
                <!-- ✅ 单个字段错误 -->
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </td>
        </tr>

        <tr>
            <th>Last Name</th>
            <td>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </td>
        </tr>

        <tr>
            <th>Subject</th>
            <td>
                <select asp-for="Subject" class="form-select">
                    <option value="">-- Select Subject --</option>
                    <option>PHP</option>
                    <option>Server-Side Web:MVC Framework</option>
                    <option>Enterprise Java</option>
                    <option>Advanced JavaScript</option>
                </select>
                <span asp-validation-for="Subject" class="text-danger"></span>
            </td>
        </tr>

        <tr>
            <th>Available Date</th>
            <td>
                <input asp-for="AvailableDate"
                       type="date"
                       class="form-control" />
                <span asp-validation-for="AvailableDate" class="text-danger"></span>
            </td>
        </tr>

        <tr>
            <th>Available Time</th>
            <td>
                <select asp-for="AvailableTime" class="form-select">
                    <option value="">-- Select Time --</option>
                    <option>8:00 AM - 10:00 AM</option>
                    <option>10:00 AM - 12:00 PM</option>
                    <option>12:00 PM - 2:00 PM</option>
                    <option>2:00 PM - 4:00 PM</option>
                    <option>4:00 PM - 6:00 PM</option>
                    <option>6:00 PM - 8:00 PM</option>
                </select>
                <span asp-validation-for="AvailableTime" class="text-danger"></span>
            </td>
        </tr>

        <tr>
            <td colspan="2">
                <button type="submit" class="btn btn-primary">
                    Submit
                </button>
            </td>
        </tr>
    </table>
</form>

<!-- ✅ 必须有这段，客户端验证脚本才会工作 -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
